@model EmployeesManagement.Models.Employee

@{
    ViewData["Title"] = "Delete"; 
}

<div class="container mt-5">
    <!-- bikin container biar rapi dan ada jarak -->
    <h1 class="text-center">Delete Employee</h1> 
    <h3 class="text-danger text-center">Are you sure you want to delete this?</h3> <!-- peringatan dengan warna merah biar eye-catching -->

    <div class="card mt-4">
        <!-- card buat nampilin detail karyawan -->
        <div class="card-header bg-danger text-white">
            <!-- header card dengan background merah -->
            <h4 class="mb-0">Employee Details</h4> <!-- judul di dalam card -->
        </div>
        <div class="card-body">
            <!-- bagian isi dari card -->
            <dl class="row">
                <!-- mulai daftar untuk detail karyawan -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt class="col-sm-3">                  
                    @Html.DisplayNameFor(model => model.MidleName)
                </dt>
                <dd class="col-sm-9">                    
                    @Html.DisplayFor(model => model.MidleName)
                </dd>
                <dt class="col-sm-3">                    
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class="col-sm-9">                    
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-3">                   
                    @Html.DisplayNameFor(model => model.EmailAddress)
                </dt>
                <dd class="col-sm-9">                    
                    @Html.DisplayFor(model => model.EmailAddress)
                </dd>
                <dt class="col-sm-3">                   
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-sm-9">                 
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
            </dl>
            <form asp-action="Delete" class="text-center">
                <!-- form untuk konfirmasi delete -->
                <input type="hidden" asp-for="Id" /> <!-- simpan ID karyawan di hidden input -->
                <button type="submit" class="btn btn-danger">Delete</button> 
                <a asp-action="Index" class="btn btn-secondary">Back to List</a> 
            </form>
        </div>
    </div>
</div>
