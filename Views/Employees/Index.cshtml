@model IEnumerable<EmployeesManagement.Models.Employee>

@{
    ViewData["Title"] = "Employees Index";
}

<div class="container">
    <h1 class="mt-4">Employees</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">Create New Employee</a>
        <a asp-action="ActivityLogs" class="btn btn-info">View Activity Logs</a> <!-- tambahin tautan di sini -->
    </p>

    <!-- search bar untuk mencari employee -->
    <div class="search-bar text-center mb-4">
        <form asp-controller="Employees" asp-action="Index" method="get" class="form-inline justify-content-center">
            <div class="input-group">
                <label class="sr-only" for="searchString">Search</label>
                <input type="text" name="searchString" id="searchString" placeholder="Search by Name, Email, or Phone" class="form-control" style="width: 300px;" value="@ViewContext.HttpContext.Request.Query["searchString"]">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Search</button>
                    <!-- Tombol reset buat balikin ke semua data -->
                    <a asp-action="Index" class="btn btn-secondary">Reset</a>
                </div>
            </div>
        </form>
    </div>

    <!-- tabel untuk menampilkan data employee -->
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MidleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MidleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        <!-- tombol untuk Edit, Details, Delete -->
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
